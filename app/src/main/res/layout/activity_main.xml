<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Antwort_A"
        android:layout_marginBottom="134dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/Antwort_A" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Antwort_B"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/Antwort_A"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/Antwort_B" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Antwort_C"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/Antwort_B"
        android:layout_alignLeft="@+id/Antwort_A"
        android:layout_alignStart="@+id/Antwort_A"
        android:hint="@string/Antwort_C" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Andwort_D"
        android:layout_alignTop="@+id/Antwort_C"
        android:layout_alignLeft="@+id/Antwort_B"
        android:layout_alignStart="@+id/Antwort_B"
        android:hint="@string/Antwort_D" />

</RelativeLayout>
